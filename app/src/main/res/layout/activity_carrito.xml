<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity">

    <RelativeLayout
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#FFC107">

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Total: 000"
            android:layout_marginTop="6dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/mensaje1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20dp"
        android:textColor="#FF9800"
        android:text="Su compra fue realizada con Ã©xito"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lvCarrito"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id1"/>

    <Button
        android:id="@+id/btContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botones1"
        android:text="Hacer Pedido"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"/>

</RelativeLayout>