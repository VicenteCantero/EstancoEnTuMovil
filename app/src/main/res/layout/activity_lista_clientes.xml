<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaClientesActivity">

    <TextView
        android:id="@+id/tvVistaClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de clientes"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:padding="15dp"
        android:background="#FF9800"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/btAgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvVistaClientes"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Agregar cliente"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/botones1"/>

    <ListView
        android:id="@+id/lvClientes"
        android:layout_below="@id/btAgregarCliente"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</RelativeLayout>