<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimerMActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenMenu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp"/>



    <Button
        android:id="@+id/btAlmacen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenMenu"
        android:inputType="textMultiLine"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Productos"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/botones1"/>

    <Button
        android:id="@+id/btClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btAlmacen"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Clientes"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/botones1"/>

    <Button
        android:id="@+id/btPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btClientes"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Ver Pedidos"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/botones1"/>


    <Button
        android:id="@+id/btCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_below="@id/btPedidos"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:text="Cerrar sesiÃ³n"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/botones1"/>

</RelativeLayout>
